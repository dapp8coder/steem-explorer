<div id="particles">
	<div id="intro">
	</div>
</div>

<div class="container-fluid">
	<div class="header">
		<h1>Search by Transaction ID</h1>
	</div>

	<div class="jumbotron searchbox">
		<%= form_tag '/search', class: 'form-inline', remote: true do |f| %>
			<%= text_field_tag :search, nil, placeholder: 'Transaction ID', class: 'form-control', tabindex: 1, autofocus: true %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
			<%= submit_tag "Search", class: 'btn btn-default', onclick: '$("body").spin();' %>
		<% end %>
	</div>

	<div class="jumbotron resultsbox transactionbox">
		<div class="resultsclose"><a onClick="$('.transactionbox').hide();">&#x2573</a></div>
			<table class="table table-condensed hash3 ultra-condensed">
			<tr>
				<th><samp>ref_block_num</samp></th>
				<td><i id="refBlockNum"></i></td>
			</tr>
			<tr>
				<th><samp>ref_block_prefix</samp></th>
				<td><i id="refBlockPrefix"></i></td>
			</tr>
			<tr>
				<th><samp>expiration</samp></th>
				<td id="expiration"></td>
			</tr>
			<tr>
				<th><samp>operations</samp></th>
				<td id="operations"></td>
			</tr>
			<tr>
				<th><samp>extensions</samp></th>
				<td><samp id="extensions">[]</samp></td>
			</tr>
			<tr>
				<th><samp>signatures</samp></th>
				<td id="signatures"></td>
			</tr>
			<tr>
				<th><samp>transaction_id</samp></th>
				<td id="transactionId"></td>
			</tr>
			<tr>
				<th><samp>block_num</samp></th>
				<td><i id="blockNum"></i></td>
			</tr>
			<tr>
				<th><samp>transaction_num</samp></th>
				<td><i id="transactionNum"></i></td>
			</tr>
		</table>
	</div>

	<div class="jumbotron resultsbox blockbox">
		<div class="resultsclose"><a onClick="$('.blockbox').hide();">&#x2573</a></div>
			<table class="table table-condensed hash3 ultra-condensed">
			<tr>
				<th><samp>previous</samp></th>
				<td><i id="blkPrevious"></i></td>
			</tr>
			<tr>
				<th><samp>timestamp</samp></th>
				<td><i id="blkTimestamp"></i></td>
			</tr>
			<tr>
				<th><samp>witness</samp></th>
				<td id="blkWitness"></td>
			</tr>
			<tr>
				<th><samp>transaction_merkel_root</samp></th>
				<td id="blkTransactionMerkelRoot"></td>
			</tr>
			<tr>
				<th><samp>extensions</samp></th>
				<td><samp id="blkExtensions"></samp></td>
			</tr>
			<tr>
				<th><samp>witness_signature</samp></th>
				<td id="blkWitnessSignature"></td>
			</tr>
			<tr>
				<th><samp>transactions</samp></th>
				<td id="blkTransactions"></td>
			</tr>
			<tr>
				<th><samp>block_id</samp></th>
				<td><i id="blkBlockId"></i></td>
			</tr>
			<tr>
				<th><samp>signing_key</samp></th>
				<td><i id="blkSigningKey"></i></td>
			</tr>
			<tr>
				<th><samp>transaction_ids</samp></th>
				<td><i id="blkTransactionIds"></i></td>
			</tr>
		</table>
	</div>
</div>
